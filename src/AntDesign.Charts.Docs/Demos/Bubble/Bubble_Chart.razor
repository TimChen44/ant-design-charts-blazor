@page "/Bubble_Chart"
@inject NavigationManager NavigationManager
@inject HttpClient HttpClient

<Tabs>
    <TabPane Key="1">
        <Tab>示例1</Tab>
        <ChildContent>
            <Bubble @ref="chart1" TItem="SmokingRateItem" Config="config1" />
        </ChildContent>
    </TabPane>
</Tabs>

@code{


    IChartComponent chart1;
    protected override async Task OnInitializedAsync()
    {
        var data1 = await DemoData.SmokingRateAsync(NavigationManager, HttpClient);
        chart1.SetData(data1);

        await base.OnInitializedAsync();
    }

    #region 示例1


    //smoking-rate
    BubbleConfig config1 = new BubbleConfig()
    {
        xField = "change in female rate",
        yField = "change in male rate",
        sizeField = "pop",
        pointSize = new int[] { 4, 30 },
        colorField = new string[] { "continent" },
        color = new string[] { "#ffd500", "#82cab2", "#193442", "#d18768", "#7e827a" },
        xAxis = new ValueTimeAxis()
        {
            visible = true,
            max = 5,
            min = -25,
        },
    };

    #endregion 示例1

}
