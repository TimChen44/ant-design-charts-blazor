@page "/DensityHeatmap_Chart"
@inject NavigationManager NavigationManager
@inject HttpClient HttpClient

<Tabs>
    <TabPane Key="1">
        <Tab>示例1</Tab>
        <ChildContent>
            <DensityHeatmap @ref="chart1" TItem="JobpayingItem" Config="config1" />
        </ChildContent>
    </TabPane>
</Tabs>

@code{

    IChartComponent chart1;

    protected override async Task OnInitializedAsync()
    {
        var data1 = await DemoData.JobpayingItemAsync(NavigationManager, HttpClient);
        chart1.SetData(data1);

        await base.OnInitializedAsync();
    }


    #region 示例1

    DensityHeatmapConfig config1 = new DensityHeatmapConfig()
    {
        xField = "prob",
        yField = "average_annual_wage",
        colorField = "numbEmployed",
        color = new string[] { "#295599", "#3e94c0", "#78c6d0", "#b4d9e4", "#fffef0", "#f9cdac", "#ec7d92", "#bc448c" },
        radius = 15,
        intensity = 2,
        xAxis = new Axis()
        {
            visible = true,
            min = -0.05,
            max = 1.05,
            nice = false,
        },
        yAxis = new Axis()
        {
            visible = true,
            min = -1000,
        },
    };


    #endregion 示例1

}
