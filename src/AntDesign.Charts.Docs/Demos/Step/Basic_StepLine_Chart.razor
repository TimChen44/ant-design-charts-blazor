@page "/Basic_StepLine_Chart"
@inject NavigationManager NavigationManager
@inject HttpClient HttpClient

<Tabs>
    <TabPane Key="1">
        <Tab>示例1</Tab>
        <ChildContent>
            <StepLine @ref="@chart1" Config="config1" TItem="FireworksSalesItem" />
        </ChildContent>
    </TabPane>
</Tabs>

@code{
    IChartComponent<FireworksSalesItem> chart1;

    protected override async Task OnInitializedAsync()
    {
        var data1 = await DemoData.FireworksSalesAsync(NavigationManager, HttpClient);
        chart1.SetData(data1);

        await base.OnInitializedAsync();
    }


    #region 示例1

    StepLineConfig config1 = new StepLineConfig()
    {
        title = new Charts.Title()
        {
            visible = true,
            text = "单阶梯折线的基础用法",
        },
        description = new Description()
        {
            visible = true,
            text = "最基础简单的阶梯图使用方式，显示一个指标的趋势和变化",
        },
        forceFit = true,
        padding = "auto",
        xField = "Date",
        yField = "scales",
        xAxis = new ValueCatTimeAxis()
        {
            type = "dateTime",
            tickCount = 5,
        },
    };

    #endregion 示例1


}
