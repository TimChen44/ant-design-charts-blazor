@page "/Scatter_Chart"
@inject NavigationManager NavigationManager
@inject HttpClient HttpClient

<Tabs>
    <TabPane Key="1">
        <Tab>示例1</Tab>
        <ChildContent>
            <Scatter @ref="line1" TItem="IMDBItem" Config="config1" />
        </ChildContent>
    </TabPane>
</Tabs>

@code{  

    IChartComponent line1;

    protected override async Task OnInitializedAsync()
    {
        var data1 = await DemoData.IMDBAsync(NavigationManager, HttpClient);
        line1.SetData(data1);

        await base.OnInitializedAsync();
    }

    public async void Reader()
    {
        await line1.Render();
    }

    #region 示例1


    ScatterConfig config1 = new ScatterConfig()
    {
        XField = "revenue",
        YField = "rating",
        XAxis = new ValueTimeAxis()
        {
            Visible = true,
            Min = -5,
        },
    };


    #endregion 示例1


}

